<resources>
    <style name="Base.Theme.PlaceDetailsUIKit" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <style name="Theme.PlaceDetailsUIKit" parent="Base.Theme.PlaceDetailsUIKit" />

    <!--
    A custom text appearance using our monospaced font.
    -->
    <style name="app_text_appearence_mono" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textColor">@color/synthwave_on_surface_variant</item>
    </style>

    <style name="app_text_appearence_mono_label" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textColor">@color/synthwave_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--
    A custom "Synthwave" theme for the PlaceDetailsCompactFragment.
    This theme overrides multiple attributes to create a unique, retro-futuristic look.
    -->
    <style name="CustomizedPlaceDetailsTheme" parent="PlacesMaterialTheme">
        <!-- Core Colors -->
        <item name="placesColorSurface">@color/synthwave_surface</item>
        <item name="placesColorPrimary">@color/synthwave_primary</item>
        <item name="placesColorOnSurface">@color/synthwave_on_surface</item>
        <item name="placesColorOnSurfaceVariant">@color/synthwave_on_surface_variant</item>
        <item name="placesColorOutlineDecorative">@color/synthwave_outline</item>

        <!-- Status Colors -->
        <item name="placesColorPositive">@color/synthwave_positive</item>
        <item name="placesColorNegative">@color/synthwave_negative</item>

        <!-- Shape -->
        <item name="placesCornerRadius">8dp</item>

        <!-- Typography -->
        <item name="placesTextAppearanceBodySmall">@style/app_text_appearence_mono</item>
        <item name="placesTextAppearanceBodyMedium">@style/app_text_appearence_mono</item>
    </style>

</resources>
